<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_button_check_sales" model="ir.ui.view">
        <field name="name">sale.order.inherit.btn</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <button name="po_button" string="Create Back order" confirm="Are you sure you wanna create Back order" type="object" attrs="{'invisible':[['state','in',['draft','sent','done','cancel']]]}"/>

            </xpath>

        </field>
    </record>


</odoo>